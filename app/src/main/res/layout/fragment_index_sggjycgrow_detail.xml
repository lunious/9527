<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include layout="@layout/fragment_detail_bar" />

    <com.classic.common.MultipleStatusView
        android:id="@+id/sggjycgrow_detail_status_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:emptyView="@layout/custom_empty_view"
        app:errorView="@layout/custom_error_view"
        app:loadingView="@layout/custom_loading_view"
        app:noNetworkView="@layout/custom_no_network_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingLeft="@dimen/d12"
            android:paddingRight="@dimen/d12"
            android:paddingTop="@dimen/d5">

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/detail_nsv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d0"
                android:layout_weight="1"
                android:scrollbars="none"
                tools:ignore="RtlHardcoded">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_main_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/s20"
                        android:textColor="#ff434343"/>

                    <LinearLayout
                        android:paddingTop="@dimen/d10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="来        源"
                                android:textSize="@dimen/s16"/>
                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_main_resource"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/d10"
                                android:text=""
                                android:textSize="@dimen/s16"
                                android:textColor="@color/colorRed"/>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="发布时间"
                            android:textSize="@dimen/s16"
                            />
                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_pu_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_marginLeft="@dimen/d10"
                            android:textSize="@dimen/s16"
                            android:textColor="@color/blue"/>
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p35"
                        android:layout_marginTop="@dimen/d10"
                        android:background="#f9eeeeee" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv1"
                        android:layout_marginTop="@dimen/d20"
                        android:layout_width="wrap_content"
                        android:lineSpacingMultiplier = "1.4"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/s18"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p1"
                        android:background="#eeeeee"
                        android:layout_marginTop="@dimen/d10"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv2"
                        android:paddingTop="@dimen/d10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:lineSpacingMultiplier = "1.5"
                        android:textSize="@dimen/s18"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p1"
                        android:background="#eeeeee"
                        android:layout_marginTop="@dimen/d10"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv3"
                        android:paddingTop="@dimen/d10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:lineSpacingMultiplier = "1.5"
                        android:textSize="@dimen/s18"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#eeeeee"
                        android:layout_marginTop="@dimen/d10"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv4"
                        android:paddingTop="@dimen/d10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:lineSpacingMultiplier = "1.5"
                        android:textSize="@dimen/s18"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p1"
                        android:background="#eeeeee"
                        android:layout_marginTop="@dimen/d10"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv5"
                        android:paddingTop="@dimen/d10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:lineSpacingMultiplier = "1.5"
                        android:textSize="@dimen/s18"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p1"
                        android:background="#eeeeee"
                        android:layout_marginTop="@dimen/d10"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv6"
                        android:paddingTop="@dimen/d10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:lineSpacingMultiplier = "1.5"
                        android:textSize="@dimen/s18"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p1"
                        android:background="#eeeeee"
                        android:layout_marginTop="@dimen/d10"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv7"
                        android:paddingTop="@dimen/d10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:lineSpacingMultiplier = "1.5"
                        android:textSize="@dimen/s18"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p1"
                        android:background="#eeeeee"
                        android:layout_marginTop="@dimen/d10"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv8"
                        android:paddingTop="@dimen/d10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:lineSpacingMultiplier = "1.5"
                        android:textSize="@dimen/s18"/>
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>


            <include layout="@layout/bottom_item_collect_share" />

        </LinearLayout>
    </com.classic.common.MultipleStatusView>


</LinearLayout>