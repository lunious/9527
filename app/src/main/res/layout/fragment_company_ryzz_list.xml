<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/d4"
    android:layout_marginRight="@dimen/d4"
    android:layout_marginTop="@dimen/d8"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/d4"
    app:cardElevation="@dimen/p1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/d6"
        android:layout_marginLeft="@dimen/d6"
        android:layout_marginRight="@dimen/d4"
        android:layout_marginTop="@dimen/d4"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/d5">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_company_qyzz_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="This is main title."
                android:textColor="#ff6c6c6c"
                android:textSize="@dimen/s16" />

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>