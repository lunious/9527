<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/fragment_detail_bar" />

    <com.classic.common.MultipleStatusView
        android:id="@+id/index_sggjy_detail_status_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:emptyView="@layout/custom_empty_view"
        app:errorView="@layout/custom_error_view"
        app:loadingView="@layout/custom_loading_view"
        app:noNetworkView="@layout/custom_no_network_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/d8"
            android:paddingRight="@dimen/d8"
            android:paddingTop="@dimen/d4">

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/detail_nsv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d0"
                android:layout_weight="1"
                android:scrollbars="none"
                tools:ignore="RtlHardcoded">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_main_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ff434343"
                        android:textSize="@dimen/s18" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/d14">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_main_area"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="成都"
                            android:textColor="#ff999999"
                            android:textSize="@dimen/s15" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/d4">

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_dead_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2017-12-12"
                                android:textSize="@dimen/s15" />

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/d10"
                                android:text="截止"
                                android:textColor="#ff6666"
                                android:textSize="@dimen/s14" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/d2">

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_pub_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2017-12-12"
                                android:textSize="@dimen/s15" />

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/d10"
                                android:text="发布"
                                android:textSize="@dimen/s14" />

                        </LinearLayout>


                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p35"
                        android:layout_marginTop="@dimen/d12"
                        android:background="#88eeeeee" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/d10"
                        android:layout_marginTop="@dimen/d18"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:id="@+id/ll_weibo_share"
                            android:layout_width="@dimen/d0"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/d2"
                            android:layout_weight="1"
                            android:background="@drawable/bg_share"
                            android:gravity="center"
                            android:padding="@dimen/d4">

                            <ImageView
                                android:layout_width="@dimen/d14"
                                android:layout_height="@dimen/d14"
                                android:src="@mipmap/ic_login_3party_weibo" />

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/d6"
                                android:text="微博"
                                android:textColor="#ff6666"
                                android:textSize="@dimen/d12" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_qq_share"
                            android:layout_width="@dimen/d0"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/d2"
                            android:layout_weight="1"
                            android:background="@drawable/bg_share"
                            android:gravity="center"
                            android:padding="@dimen/d4">

                            <ImageView
                                android:layout_width="@dimen/d14"
                                android:layout_height="@dimen/d14"
                                android:src="@mipmap/ic_login_3party_qq" />

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/d6"
                                android:text="QQ"
                                android:textColor="#11a9ff"
                                android:textSize="@dimen/d12" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_chat_share"
                            android:layout_width="@dimen/d0"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/d2"
                            android:layout_weight="1"
                            android:background="@drawable/bg_share"
                            android:gravity="center"
                            android:padding="@dimen/d4">

                            <ImageView
                                android:layout_width="@dimen/d14"
                                android:layout_height="@dimen/d14"
                                android:src="@mipmap/ic_login_3party_wechat" />

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/d6"
                                android:text="微信"
                                android:textColor="#339933"
                                android:textSize="@dimen/d12" />


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_pyq_share"
                            android:layout_width="@dimen/d0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/bg_share"
                            android:gravity="center"
                            android:padding="@dimen/d4">

                            <ImageView
                                android:layout_width="@dimen/d14"
                                android:layout_height="@dimen/d14"
                                android:src="@mipmap/ic_action_moments" />

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/d6"
                                android:text="朋友圈"
                                android:textColor="#009966"
                                android:textSize="@dimen/d12" />


                        </LinearLayout>


                    </LinearLayout>


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_fbt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d12"
                        android:lineSpacingMultiplier="1.2"
                        android:text="副标题"
                        android:textColor="#434343"
                        android:textSize="@dimen/s15" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d20"
                        android:lineSpacingMultiplier="1.5"
                        android:text=""
                        android:textSize="@dimen/s16" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p1"
                        android:layout_marginTop="@dimen/d12"
                        android:background="@color/view" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d12"
                        android:lineSpacingMultiplier="1.5"
                        android:text=""
                        android:textSize="@dimen/s16" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p1"
                        android:layout_marginTop="@dimen/d12"
                        android:background="@color/view" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d12"
                        android:lineSpacingMultiplier="1.5"
                        android:text=""
                        android:textSize="@dimen/s16" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p1"
                        android:layout_marginTop="@dimen/d12"
                        android:background="@color/view" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d12"
                        android:lineSpacingMultiplier="1.5"
                        android:text=""
                        android:textSize="@dimen/s16" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p1"
                        android:layout_marginTop="@dimen/d12"
                        android:background="@color/view" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d12"
                        android:lineSpacingMultiplier="1.5"
                        android:text=""
                        android:textSize="@dimen/s16" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p1"
                        android:layout_marginTop="@dimen/d12"
                        android:background="@color/view" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d12"
                        android:lineSpacingMultiplier="1.5"
                        android:text=""
                        android:textSize="@dimen/s16" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p1"
                        android:layout_marginTop="@dimen/d12"
                        android:background="@color/view" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d12"
                        android:lineSpacingMultiplier="1.5"
                        android:text=""
                        android:textSize="@dimen/s16" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p1"
                        android:layout_marginTop="@dimen/d12"
                        android:background="@color/view" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/d26"
                        android:layout_marginTop="@dimen/d12"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="公告原文:"
                            android:textSize="@dimen/s16" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_yw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/d10"
                            android:text="点击查看"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/s16" />


                    </LinearLayout>
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>

            <include layout="@layout/bottom_item_collect_share" />

        </LinearLayout>
    </com.classic.common.MultipleStatusView>


</LinearLayout>