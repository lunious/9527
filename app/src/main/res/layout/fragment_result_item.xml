<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/d6"
    app:cardElevation="@dimen/p2"
    app:cardCornerRadius="@dimen/d4"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginLeft="@dimen/d6"
        android:layout_marginRight="@dimen/d4"
        android:layout_marginTop="@dimen/d4"
        android:layout_marginBottom="@dimen/d6">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="This is main title."
            android:textColor="#ff434343"
            android:textSize="@dimen/s15" />

        <LinearLayout
            android:id="@+id/linear_temp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_title"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_item_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/d38"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#ff999999"
                android:textSize="@dimen/s13" />
        </LinearLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/linear_temp"
            android:text="Feb 15"
            android:textColor="#ffa0a0a0"
            android:textSize="@dimen/s13"
            android:layout_marginRight="@dimen/d4" />

    </RelativeLayout>

</android.support.v7.widget.CardView>