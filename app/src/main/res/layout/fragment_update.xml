<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#15000000"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/d40"
        android:layout_marginLeft="@dimen/d28"
        android:layout_marginRight="@dimen/d28"
        android:clickable="true"
        tools:ignore="UselessParent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/d18"
            android:paddingRight="@dimen/d18">

            <LinearLayout
                android:id="@+id/ll_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d40"
                android:background="@color/main_status_white"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d72"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="检查更新"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/bg_update" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/d16"
                        android:text="升级到新版本"
                        android:textColor="#111111"
                        android:textSize="16sp" />
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_update_version_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d14"
                        android:layout_marginBottom="@dimen/d14"
                        android:text="升级到新版本"
                        android:textSize="12sp" />
                </LinearLayout>


                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_update_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d14"
                    android:layout_marginRight="@dimen/d14"
                    android:lineSpacingExtra="@dimen/d2"
                    android:text="1、优化了界面显示 \n2、修复了登陆后不能查询 \n3、修复了BUG若干"
                    android:textColor="#666666"
                    android:textSize="@dimen/s15" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/btn_update"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d34"
                    android:layout_marginLeft="@dimen/d14"
                    android:layout_marginTop="@dimen/d10"
                    android:layout_marginRight="@dimen/d14"
                    android:background="@drawable/button_selected"
                    android:text="立即升级"
                    android:gravity="center"
                    android:textColor="@color/main_status_white"
                    android:textSize="@dimen/s15" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/btn_ignore"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d34"
                    android:text="烦，下次再说"
                    android:gravity="center"
                    android:textColor="@color/status_text_color"
                    android:textSize="@dimen/s14" />
            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/d78"
                android:layout_height="@dimen/d78"
                android:layout_marginLeft="@dimen/d22"
                android:layout_marginTop="@dimen/d2"
                android:src="@mipmap/roket_update" />
        </FrameLayout>

    </FrameLayout>

    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/d96"
        android:layout_marginRight="@dimen/d34"
        android:background="#00000000"
        android:src="@mipmap/ic_close" />
</FrameLayout>