<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/fragment_main_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d8"
            android:layout_marginRight="@dimen/d8"
            android:layout_marginTop="@dimen/d20"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/d60"
                android:layout_height="@dimen/d60"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d20"
                android:contentDescription="@null"
                android:src="@mipmap/log" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d12"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="@dimen/d4"
                    android:text="鲁班标讯通"
                    android:textColor="#ff434343"
                    android:textSize="@dimen/s15" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/d12">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="版本号:"
                        android:textColor="#6e6e6e"
                        android:textSize="@dimen/s12" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_version_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/d4"
                        android:text="V1.0.0"
                        android:textColor="#6e6e6e"
                        android:textSize="@dimen/s12" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d1"
            android:layout_marginLeft="@dimen/d8"
            android:layout_marginRight="@dimen/d8"
            android:background="@color/view" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d8"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:paddingLeft="@dimen/d6"
                android:paddingRight="@dimen/d6"
                android:text="1、“鲁班标讯通”让海量工程招标公告、政府采购公告尽在掌握、随手分享;"
                android:textColor="#6e6e6e"
                android:textSize="@dimen/s15" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d8"
                android:lineSpacingMultiplier="1.2"
                android:paddingLeft="@dimen/d6"
                android:paddingRight="@dimen/d6"
                android:text="2、“鲁班标讯通”及时推送答疑、补遗、中标公示、采购结果;"
                android:textSize="@dimen/s15" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d8"
                android:lineSpacingMultiplier="1.2"
                android:paddingLeft="@dimen/d6"
                android:paddingRight="@dimen/d6"
                android:text="3、“鲁班标讯通”随时随地掌握您关注的招标项目动态;"
                android:textSize="@dimen/s15" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d1"
            android:layout_marginLeft="@dimen/d8"
            android:layout_marginRight="@dimen/d8"
            android:layout_marginTop="@dimen/d8"
            android:background="@color/view" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/d0">

            <ImageView
                android:layout_width="@dimen/d120"
                android:layout_height="@dimen/d120"
                android:layout_gravity="center"
                android:src="@mipmap/erweima" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="@dimen/d6"
                android:text="扫码关注招投标神器" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d1"
            android:layout_marginLeft="@dimen/d8"
            android:layout_marginRight="@dimen/d8"
            android:layout_marginTop="@dimen/d8"
            android:background="@color/view" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d8"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/d6"
            android:paddingRight="@dimen/d6">


            <ImageView
                android:layout_width="@dimen/d32"
                android:layout_height="@dimen/d32"
                android:gravity="center"
                android:src="@mipmap/ic_share" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:text="成都鲁班建业科技股份有限公司"
                android:textColor="#434343"
                android:textSize="@dimen/s15" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d1"
            android:layout_marginLeft="@dimen/d8"
            android:layout_marginRight="@dimen/d8"
            android:layout_marginTop="@dimen/d8"
            android:background="@color/view" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/d24">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_luban"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/d15"
                android:text="公司官网"
                android:textColor="@color/blue" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/d10">


            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="© 2017 lubanjianye.com All rights reserved."
                android:textColor="#6e6e6e" />

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>