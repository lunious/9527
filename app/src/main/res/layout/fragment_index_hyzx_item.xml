<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/d4"
    android:layout_marginRight="@dimen/d4"
    android:layout_marginTop="@dimen/d8"
    app:cardElevation="@dimen/p1"
    app:cardCornerRadius="@dimen/d4"
    android:foreground="?android:attr/selectableItemBackground">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/d6"
        android:layout_marginRight="@dimen/d4"
        android:layout_marginTop="@dimen/d4"
        android:layout_marginBottom="@dimen/d6">

        <LinearLayout
            android:layout_width="@dimen/d0"
            android:layout_height="@dimen/d100"
            android:layout_weight="1.8">

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_index_hyzx_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:background="@mipmap/hyzx_1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/d0"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/d4">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_index_hyzx_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="工程招投标“打招呼”必登记"
                android:textColor="#ff434343"
                android:textSize="@dimen/s16" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_index_hyzx_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-7-7"
                    android:textColor="#ffa0a0a0"
                    android:textSize="@dimen/s14"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/d4" />

            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>