<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/d4"
    android:layout_marginRight="@dimen/d4"
    android:layout_marginTop="@dimen/d8"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/d4"
    app:cardElevation="@dimen/p2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d66"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/d4"
        android:paddingLeft="@dimen/d10"
        android:paddingRight="@dimen/d10"
        android:paddingTop="@dimen/d4">

        <LinearLayout
            android:layout_width="@dimen/d0"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_ryzz_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="周杰伦"
                android:textColor="@color/blue"
                android:textSize="@dimen/s15" />


        </LinearLayout>

        <View
            android:layout_width="@dimen/p4"
            android:layout_height="match_parent"
            android:background="@color/view"
            android:paddingBottom="@dimen/d14"
            android:paddingTop="@dimen/d14"/>

        <LinearLayout
            android:layout_width="@dimen/d0"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/d10"
            android:layout_weight="4">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_ryzz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="歌手__演员"
                android:textColor="#ff6c6c6c"
                android:textSize="@dimen/s15" />


        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>