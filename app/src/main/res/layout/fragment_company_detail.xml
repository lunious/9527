<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/fragment_main_bar" />


    <com.classic.common.MultipleStatusView
        android:id="@+id/company_detail_status_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:emptyView="@layout/custom_empty_view"
        app:errorView="@layout/custom_error_view"
        app:loadingView="@layout/custom_loading_view"
        app:noNetworkView="@layout/custom_no_network_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/d12"
            android:paddingRight="@dimen/d12"
            android:paddingTop="@dimen/d5">


            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="@dimen/d0"
                android:layout_weight="1"
                android:scrollbars="none"
                tools:ignore="RtlHardcoded">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_main_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="圣弘建设股份有限公司"
                        android:textColor="#ff434343"
                        android:textSize="@dimen/s16" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/d10">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="@dimen/d0"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">


                                <android.support.v7.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="法        人："
                                    android:textSize="@dimen/s14" />

                                <android.support.v7.widget.AppCompatTextView
                                    android:id="@+id/tv_faren"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/d10"
                                    android:text=""
                                    android:textColor="@color/blue"
                                    android:textSize="@dimen/d14" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="@dimen/d0"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <android.support.v7.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="注  册  地："
                                    android:textSize="@dimen/s14" />

                                <android.support.v7.widget.AppCompatTextView
                                    android:id="@+id/tv_zc_data"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/d10"
                                    android:text=""
                                    android:textColor="@color/blue"
                                    android:textSize="@dimen/s14" />

                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d6"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="信用代码："
                                android:textSize="@dimen/s14" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_pu_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/d10"
                                android:text=""
                                android:textColor="@color/blue"
                                android:textSize="@dimen/s14" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/d6">

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="注册类型："
                                android:textSize="@dimen/s14" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_zc_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/d10"
                                android:text=""
                                android:textColor="@color/blue"
                                android:textSize="@dimen/s14" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/d6">

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="经营地址："
                                android:textSize="@dimen/s14" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_jy_area"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/d10"
                                android:text=""
                                android:textColor="#ff9933"
                                android:textSize="@dimen/s14" />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p1"
                        android:layout_marginTop="@dimen/d14"
                        android:background="#9e9e9e" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/d6">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/d18"
                                android:layout_height="@dimen/d18"
                                android:src="@mipmap/qyzz" />

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/d6"
                                android:text="其它信息"
                                android:textColor="@color/blue"
                                android:textSize="@dimen/s16" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/p1"
                            android:layout_marginTop="@dimen/d6"
                            android:background="#9e9e9e" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d8"
                            android:orientation="horizontal">


                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="@dimen/d0"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="企业业绩"
                                android:textColor="#9c9c9c"
                                android:textSize="@dimen/d14" />

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="@dimen/d0"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="查看工程业绩"
                                android:textColor="#3c3c3c"
                                android:textSize="@dimen/d15" />

                            <RelativeLayout
                                android:id="@+id/ll_sgyj"
                                android:layout_width="@dimen/d0"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <android.support.v7.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/bg_sign_status"
                                    android:paddingBottom="@dimen/d4"
                                    android:paddingLeft="@dimen/d8"
                                    android:paddingRight="@dimen/d8"
                                    android:paddingTop="@dimen/d4"
                                    android:text="查看详情"
                                    android:textColor="@color/blue"
                                    android:textSize="@dimen/d14" />
                            </RelativeLayout>


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/p1"
                            android:layout_marginTop="@dimen/d8"
                            android:background="#9e9e9e" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d8"
                            android:orientation="horizontal">


                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="@dimen/d0"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="企业人员"
                                android:textColor="#9c9c9c"
                                android:textSize="@dimen/d14" />

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="@dimen/d0"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="查看人员资质"
                                android:textColor="#3c3c3c"
                                android:textSize="@dimen/d15" />

                            <RelativeLayout
                                android:id="@+id/ll_ryzz"
                                android:layout_width="@dimen/d0"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <android.support.v7.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/bg_sign_status"
                                    android:paddingBottom="@dimen/d4"
                                    android:paddingLeft="@dimen/d8"
                                    android:paddingRight="@dimen/d8"
                                    android:paddingTop="@dimen/d4"
                                    android:text="查看详情"
                                    android:textColor="@color/blue"
                                    android:textSize="@dimen/d14" />
                            </RelativeLayout>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/d36"
                            android:layout_marginTop="@dimen/d8"
                            android:background="@mipmap/myqyzz"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="企业资质"
                                android:textColor="#ff434343"
                                android:textSize="@dimen/s16" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/company_qyzz_recycler"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_more_qyzz"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/d6"
                            android:paddingTop="@dimen/d8"
                            android:visibility="gone">

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="查看全部"
                                android:textColor="@color/blue"
                                android:textSize="@dimen/s12"
                                android:visibility="visible" />


                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/qyzz_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/blue"
                                android:textSize="@dimen/s12"
                                android:visibility="visible" />

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="个企业资质 >"
                                android:textColor="@color/blue"
                                android:textSize="@dimen/s12"
                                android:visibility="visible" />

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>

        </LinearLayout>
    </com.classic.common.MultipleStatusView>


</LinearLayout>